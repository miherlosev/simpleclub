<html>
<head>
    <meta content="IE=Edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link rel="stylesheet" type="text/css" href="shared-styles.css">
    @Styles.Render("~/bundles/shared-styles")
</head>
<body>
    <div class="page">
        <div class="header" style="margin-bottom:20px;">
            <div>
                <div class="pull-right bg-grey" style="width:163px;height:5px;"></div>
                <div class="pull-right bg-green" style="width:163px;height:5px;"></div>
                <div class="pull-right bg-red" style="width:163px;height:5px;"></div>
                <div class="pull-right bg-grey" style="width:163px;height:5px;"></div>
